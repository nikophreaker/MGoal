<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res"
    android:id="@id/dialog_match_bet_layout_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/full_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/dialog_match_bet_layout"
        android:layout_width="fill_parent"
        android:layout_height="250.0dip"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/dialog_bet_layout_main"
            android:layout_width="fill_parent"
            android:layout_height="350.0dip"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/pop_bottom_bg"
            android:orientation="vertical"
            android:paddingBottom="10.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15.0dip"
                android:paddingEnd="15.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30.0dip">

                    <TextView
                        android:id="@id/dialog_match_bet_res_stake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/stake"
                        android:textColor="@color/font_color_749de3"
                        android:textSize="18.0sp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:layout_marginStart="5.0dip"
                        android:background="@mipmap/img_score_filter_search_bg">

                        <EditText
                            android:id="@id/dialog_match_bet_edt_stake"
                            android:layout_width="200.0dip"
                            android:layout_height="35.0dip"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15.0dip"
                            android:layout_marginEnd="35.0dip"
                            android:background="@null"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/font_color_080e1d"
                            android:textSize="18.0dip"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@id/dialog_match_bet_tv_stake_cancel"
                            android:layout_width="36.0dip"
                            android:layout_height="36.0dip"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10.0dip"
                            android:padding="8.0dip"
                            android:src="@mipmap/img_score_close" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginTop="20.0dip">

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@mipmap/btn_green">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3.0dip">

                            <ImageView
                                android:id="@id/bet_btn_option_1_i_coins"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/match_top_icon_coin" />

                            <TextView
                                android:id="@id/bet_btn_stake_option_1_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5.0dip"
                                android:layout_toEndOf="@id/bet_btn_option_1_i_coins"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="18.0sp"
                                app:boder_color="@color/font_color_080e1d"
                                app:boder_width="2.0dip" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@mipmap/btn_green">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3.0dip">

                            <ImageView
                                android:id="@id/bet_btn_option_2_i_coins"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/match_top_icon_coin" />

                            <TextView
                                android:id="@id/bet_btn_stake_option_2_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5.0dip"
                                android:layout_toEndOf="@id/bet_btn_option_2_i_coins"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="18.0sp"
                                app:boder_color="@color/font_color_080e1d"
                                app:boder_width="2.0dip" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@mipmap/btn_green">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3.0dip">

                            <ImageView
                                android:id="@id/bet_btn_option_3_i_coins"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/match_top_icon_coin" />

                            <TextView
                                android:id="@id/bet_btn_stake_option_3_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="5.0dip"
                                android:layout_toEndOf="@id/bet_btn_option_3_i_coins"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="18.0sp"
                                app:boder_color="@color/font_color_080e1d"
                                app:boder_width="2.0dip" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@mipmap/btn_green">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3.0dip">

                            <TextView
                                android:id="@id/bet_btn_option_max_t_max"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Max"
                                android:textColor="#ff004008"
                                android:textSize="12.0sp" />

                            <ImageView
                                android:id="@id/bet_btn_option_max_i_coins"
                                android:layout_width="20.0dip"
                                android:layout_height="20.0dip"
                                android:layout_below="@id/bet_btn_option_max_t_max"
                                android:src="@mipmap/match_top_icon_coin" />

                            <TextView
                                android:id="@id/bet_btn_stake_option_max_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/bet_btn_option_max_t_max"
                                android:layout_marginStart="5.0dip"
                                android:layout_marginTop="-5.0dip"
                                android:layout_toEndOf="@id/bet_btn_option_max_i_coins"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="18.0sp"
                                app:boder_color="@color/font_color_080e1d"
                                app:boder_width="2.0dip" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/dialog_match_bet_res_to_win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to_win"
                        android:textColor="@color/font_color_749de3"
                        android:textSize="18.0sp" />

                    <TextView
                        android:id="@id/dialog_bet_match_tv_winning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="18.0sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@id/guide_layout_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="8.0dip"
                android:background="#70000000"
                android:visibility="gone" />

            <TextView
                android:id="@id/dialog_bet_btn_confirm"
                style="@style/BtnBlue"
                android:layout_height="50dip"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24.0dip"
                android:layout_marginTop="50.0dip"
                android:layout_marginEnd="22.0dip"
                android:layout_marginBottom="5.0dip"
                android:paddingBottom="3.0dip"
                android:text="@string/btn_confirm"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageView
            android:id="@id/dialog_btn_close"
            android:layout_width="54.0dip"
            android:layout_height="57.0dip"
            android:layout_marginTop="-30dip"
            android:layout_alignParentEnd="true"
            android:padding="10.0dip"
            android:src="@mipmap/img_middle_pop_close" />
    </RelativeLayout>

    <TextView
        android:id="@id/guide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/dialog_match_bet_layout"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/gudie_text_bg"
        android:paddingStart="25.0dip"
        android:paddingTop="20.0dip"
        android:paddingEnd="25.0dip"
        android:paddingBottom="20.0dip"
        android:text="@string/guide_match_bet_tips_menu"
        android:textColor="@color/black"
        android:textSize="22.0sp"
        android:visibility="gone" />

    <ImageView
        android:id="@id/guide_icon_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60.0dip"
        android:rotation="160.0"
        android:src="@mipmap/icon_guide_finger"
        android:visibility="gone" />

    <include layout="@layout/include_request_state" />
</RelativeLayout>